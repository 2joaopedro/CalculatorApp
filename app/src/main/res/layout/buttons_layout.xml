<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:id="@+id/UselessParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/clear_btn"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:background="@color/blue"
            android:text="c"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnwWeight="1"
            android:onClick="onButtonClicked"/>

        <Button
            android:id="@+id/power_btn"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnwWeight="1"
            android:background="@color/blue"
            android:onClick="onButtonClicked"
            android:text="^"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/percent_btn"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnwWeight="1"
            android:background="@color/blue"
            android:onClick="onButtonClicked"
            android:text="%"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/division_btn"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnwWeight="1"
            android:background="@color/blue"
            android:onClick="onButtonClicked"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn7_btn"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnwWeight="1"
            android:background="@color/blue"
            android:onClick="onButtonClicked"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn8_btn"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnwWeight="1"
            android:background="@color/blue"
            android:onClick="onButtonClicked"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn9_btn"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnwWeight="1"
            android:background="@color/blue"
            android:onClick="onButtonClicked"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/multiply_btn"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnwWeight="1"
            android:background="@color/blue"
            android:onClick="onButtonClicked"
            android:text="*"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn4_btn"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnwWeight="1"
            android:background="@color/blue"
            android:onClick="onButtonClicked"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn5_btn"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnwWeight="1"
            android:background="@color/blue"
            android:onClick="onButtonClicked"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="25sp" />
        <Button
            android:id="@+id/btn6_btn"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnwWeight="1"
            android:background="@color/blue"
            android:onClick="onButtonClicked"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/less_btn"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnwWeight="1"
            android:background="@color/blue"
            android:onClick="onButtonClicked"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn1_btn"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnwWeight="1"
            android:background="@color/blue"
            android:onClick="onButtonClicked"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn2_btn"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnwWeight="1"
            android:background="@color/blue"
            android:onClick="onButtonClicked"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn3_btn"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnwWeight="1"
            android:background="@color/blue"
            android:onClick="onButtonClicked"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/sum_btn"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnwWeight="1"
            android:background="@color/blue"
            android:onClick="onButtonClicked"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="25sp" />



    </GridLayout>
</RelativeLayout>